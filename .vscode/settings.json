{
    "intelephense.environment.documentRoot": "${workspaceFolder}\\public",
    "intelephense.phpdoc.useFullyQualifiedNames": true,
    "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
    "php-cs-fixer.executablePathWindows": "${workspaceFolder}/vendor/bin/php-cs-fixer.bat",
    "beautify.language": {

        "js": {
            "type": [
                "javascript",
                "json",
                "jsonc"
            ],
            "filename": [
                ".jshintrc",
                ".jsbeautifyrc"
            ]
        },
        "css": [
            "css",
            "less",
            "scss"
        ],
        "html": [
            "htm",
            "html"
        ]
    },
    "alignment.surroundSpace": {
        "colon": [
            0,
            1
        ],
        "assignment": [
            1,
            1
        ],
        "arrow": [
            1,
            1
        ],
        "comment": 2
    },
    "intelephense.environment.includePaths": [
        "./resources/views/**",
        "_ide_helper.php"
    ],
    "intelephense.files.associations": [
        "*.php",
        "*.phtml",
        "*.blade.php",
    ],
    "intelephense.trace.server": "messages"
}